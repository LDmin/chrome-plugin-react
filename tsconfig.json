{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/", // 打包到的目录
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "types": [
      "node",
      "chrome",
      "umi-request"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ], // 要打包的文件
  "exclude": [
    "node_modules",
    "*.test.ts",
    "webpack.config.js"
  ]
}