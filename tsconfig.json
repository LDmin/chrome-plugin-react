{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/", // 打包到的目录
    "sourceMap": true, // 是否生成sourceMap（用于浏览器调试）
    "module": "esnext",
    "target": "es6", // 转化成的目标语言
    // "baseUrl": "./src",
    "types": [
      "node",
      "chrome"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types/*"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ], // 要打包的文件
  "exclude": [
    "node_modules",
    "*.test.ts",
    "webpack.config.js"
  ]
}